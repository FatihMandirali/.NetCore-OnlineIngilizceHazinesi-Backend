
@{
    ViewData["Title"] = "Genel";
    Layout = "~/Views/Yonetim/Index.cshtml";
}

<div class="row">

    <div class="col-md-12">

        <ol class="breadcrumb breadcrumb-arrow">
            <li><a href="#"><i class="glyphicon glyphicon-home"></i> Anasayfa</a></li>
            <li><a href="#"><i class="glyphicon glyphicon-list-alt"></i> Genel</a></li>
            <li class="active"><span><i class="glyphicon glyphicon-calendar"></i> Genel Bilgiler</span></li>
        </ol>
    </div>
</div>
<div class="panel-body">
    <div class="content-row" ng-app="GenelIncele">
        <div class="bs-example" ng-controller="genelIncele">
            <div class="form-group">
                @Html.Label("", "Kullanıcı Sayısı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{genel.kullaniciSayisi}}" disabled  name="kadi1" id="kadi1" class="form-control" placeholder="Soru" />

                </div>
            </div><br />

            <div class="form-group">
                @Html.Label("", "Kelime Sayısı", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="text" value="{{genel.kelimeSayisi}}" disabled name="kadi1" id="kadi1" class="form-control" placeholder="Soru" />

                </div>
            </div><br />

        </div>
    </div>
</div>
<script src="~/Files/js/jquery.min.js"></script>
<script type="text/javascript">
    var app = angular.module("GenelIncele", []);


  app.controller("genelIncele", function ($scope, $http) {
    $http({
        method: "GET",
        url: "/api/Yonetim/GetGenel"
    }).then(function mySuccess(response) {
        $scope.genel = response.data;
        }, function myError(response) {
            if (response.data == "Mesaj")
                window.location = "/Home/Index/";
            else
                $scope.genel = response.statusText;
    });
});

</script>
